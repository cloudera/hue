{{#if apiAccessError}}
  <br/>
  {{error-panel error=error.error onClose="refreshCurrentRoute" defaultMessage="There is some problem in connecting to the server! Please try again."}}
{{else if loaded}}
  {{#if (or query1.queryText query2.queryText)}}
    {{query-compare query1=query1 query2=query2 swapQuery="swapQuery" clearQuery="clearQuery" showComparision="showComparision"}}
    <div class="placeholder"></div>
  {{/if}}
  {{table-component
  title="Queries"

  columns=columns
  rows=model
  rowCount=rowCount

  searches=searches

  classNames="all-queries-table"

  definition=definition
  dataLoader=dataLoader

  rowAction="rowCountChanged"

  search="search"
  loadPage="loadPage"
  reload="reload"

  saveSearch="saveSearch"
  deleteSearch="deleteSearch"
  killQuery="killQuery"
  }}
{{else}}
  {{partial "loading"}}
{{/if}}
