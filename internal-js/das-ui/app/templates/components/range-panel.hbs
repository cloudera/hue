<div class="row">
  <div class="col-md-4 time-range-panel">
    <div class="title">Time Range</div>

    FROM
    <div class="form-group">
      <div class='input-group date' id="from-date">
        <input type='text' class="form-control">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>

    TO
    <div class="form-group">
      <div class='input-group date' id="to-date">
        <input type='text' class="form-control">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>

    <div class="input-group-btn">
      <button class="btn btn-success" type="button" {{action 'setCustomRange' }}>APPLY</button>
    </div>
  </div>
  <div class="col-md-8 quick-range-panel">
    <div class="title">Quick Range</div>
    <div class="row">
      {{#each rangeSets as |set|}}
        <div class="col-md-3">
          <ul>
            {{#each set as |range|}}
              <li><a href="#" {{action 'setRange' range}}>{{range.title}}</a></li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    </div>
  </div>
</div>
